<h1>Listing words</h1>

<table>
  <tr>
    <th>Word</th>
    <th>Definition</th>
    <th>Universe</th>
    <th>Website</th>
    <th>Is name</th>
    <th>Titleize</th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%=h word.word %></td>
    <td><%=h word.definition %></td>
    <td><%=h word.universe_id %></td>
    <td><%=h word.website %></td>
    <td><%=h word.is_name %></td>
    <td><%=h word.titleize %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New word', new_word_path %>